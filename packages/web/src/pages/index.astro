---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav";
import List, { ListProps } from "../components/List";
import tw from "clsx";
import slugify from "slugify";
import { all } from "@static_lists/data";

// all();
// // TODO: filter out all invalidly formatted files
const lists = await Astro.glob<ListProps>("../data/*.json");
---

<Layout>
  <Nav client:visible />

  <main
    class={tw(`flex flex-col gap-y-16 justify-center items-center py-8 px-4`)}
  >
    {
      lists
        .sort((x, y) => x.name.localeCompare(y.name))
        .map((list) => (
          <List
            {...list}
            name={slugify(list.name, { replacement: "_", lower: true })}
            client:visible
          />
        ))
    }
  </main>
</Layout>
